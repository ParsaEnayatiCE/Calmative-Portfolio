@model Calmative.Web.App.Models.ViewModels.UpdateAssetViewModel

@{
    ViewData["Title"] = "ویرایش دارایی";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg fade-in">
                <div class="card-header text-center">
                    <h3><i class="fas fa-edit me-2"></i>ویرایش دارایی</h3>
                    <p class="mb-0">ویرایش اطلاعات دارایی "@Model.Name"</p>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PortfolioId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-tag me-2"></i>@Html.DisplayNameFor(m => m.Name)
                                </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Symbol" class="form-label">
                                    <i class="fas fa-code me-2"></i>@Html.DisplayNameFor(m => m.Symbol)
                                </label>
                                <input asp-for="Symbol" class="form-control" />
                                <span asp-validation-for="Symbol" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">
                                <i class="fas fa-list me-2"></i>@Html.DisplayNameFor(m => m.Type)
                            </label>
                            <select asp-for="Type" class="form-select" asp-items="ViewBag.AssetTypes">
                                <option value="">نوع دارایی را انتخاب کنید</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label">
                                    <i class="fas fa-sort-numeric-up me-2"></i>@Html.DisplayNameFor(m => m.Quantity)
                                </label>
                                <input asp-for="Quantity" class="form-control" type="text" inputmode="decimal" style="direction: ltr; text-align: left;" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PurchasePrice" class="form-label">
                                    <i class="fas fa-money-bill me-2"></i>@Html.DisplayNameFor(m => m.PurchasePrice)
                                </label>
                                <input asp-for="PurchasePrice" class="form-control" type="text" inputmode="decimal" style="direction: ltr; text-align: left;" />
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="CurrentPrice" class="form-label">
                                    <i class="fas fa-chart-line me-2"></i>@Html.DisplayNameFor(m => m.CurrentPrice)
                                </label>
                                <input asp-for="CurrentPrice" class="form-control" type="text" inputmode="decimal" style="direction: ltr; text-align: left;" />
                                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PurchaseDate" class="form-label">
                                <i class="fas fa-calendar me-2"></i>@Html.DisplayNameFor(m => m.PurchaseDate)
                            </label>
                            <input asp-for="PurchaseDate" class="form-control" type="date" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-save me-2"></i>ذخیره تغییرات
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-controller="Portfolio" asp-action="Details" asp-route-id="@Model.PortfolioId" class="btn btn-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>بازگشت
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 