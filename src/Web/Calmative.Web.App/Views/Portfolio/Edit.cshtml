@model Calmative.Web.App.Models.ViewModels.UpdatePortfolioViewModel

@{
    ViewData["Title"] = "ویرایش پورتفولیو";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg fade-in">
                <div class="card-header text-center">
                    <h3><i class="fas fa-edit me-2"></i>ویرایش پورتفولیو</h3>
                    <p class="mb-0">ویرایش اطلاعات پورتفولیو "@Model.Name"</p>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-folder me-2"></i>@Html.DisplayNameFor(m => m.Name)
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-2"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-save me-2"></i>ذخیره تغییرات
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-eye me-2"></i>مشاهده جزئیات
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a asp-action="Index" class="btn btn-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>بازگشت
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 