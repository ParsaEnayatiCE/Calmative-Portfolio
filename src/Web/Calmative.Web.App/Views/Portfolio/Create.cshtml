@model Calmative.Web.App.Models.ViewModels.CreatePortfolioViewModel

@{
    ViewData["Title"] = "ایجاد پورتفولیو جدید";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg fade-in">
                <div class="card-header text-center">
                    <h3><i class="fas fa-plus-circle me-2"></i>ایجاد پورتفولیو جدید</h3>
                    <p class="mb-0">پورتفولیو جدید برای مدیریت سرمایه‌گذاری‌های خود ایجاد کنید</p>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-folder me-2"></i>@Html.DisplayNameFor(m => m.Name)
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="نام پورتفولیو را وارد کنید" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-2"></i>@Html.DisplayNameFor(m => m.Description)
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحی در مورد این پورتفولیو بنویسید (اختیاری)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-save me-2"></i>ایجاد پورتفولیو
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-left me-2"></i>بازگشت
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 