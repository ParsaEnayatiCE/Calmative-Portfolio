@{
    ViewData["Title"] = "خانه";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container text-center text-white py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <i class="fas fa-chart-line fa-4x mb-4"></i>
                <h1 class="display-4 fw-bold mb-3">سیستم مدیریت پورتفولیو Calmative</h1>
                <p class="lead mb-4">
                    راه‌حل هوشمند برای مدیریت و نظارت بر سرمایه‌گذاری‌های شما در انواع دارایی‌ها
                </p>
                @if (Context.Request.Cookies.ContainsKey("jwt_token"))
                {
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-tachometer-alt me-2"></i>ورود به داشبورد
                    </a>
                    <a asp-controller="Portfolio" asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-briefcase me-2"></i>مدیریت پورتفولیوها
                    </a>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-user-plus me-2"></i>شروع کنید
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>ورود به سیستم
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-6 fw-bold mb-3">ویژگی‌های سیستم</h2>
            <p class="lead text-muted">امکانات قدرتمند برای مدیریت بهتر سرمایه‌گذاری‌های شما</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-briefcase fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">مدیریت پورتفولیو</h5>
                    <p class="card-text text-muted">
                        ایجاد و مدیریت چندین پورتفولیو برای انواع مختلف سرمایه‌گذاری‌های خود
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">تحلیل عملکرد</h5>
                    <p class="card-text text-muted">
                        نمودارها و آمارهای دقیق از سود و زیان، توزیع دارایی‌ها و عملکرد کلی
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-coins fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">انواع دارایی</h5>
                    <p class="card-text text-muted">
                        پشتیبانی از ارز، طلا، نقره، رمزارز و فلزات گرانبها در یک سیستم یکپارچه
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-sync fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">به‌روزرسانی خودکار قیمت</h5>
                    <p class="card-text text-muted">
                        قیمت‌های دارایی‌های شما به‌طور خودکار و در زمان واقعی به‌روزرسانی می‌شود
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt fa-3x text-danger"></i>
                    </div>
                    <h5 class="card-title">امنیت بالا</h5>
                    <p class="card-text text-muted">
                        استفاده از تکنولوژی‌های مدرن امنیتی برای حفاظت از اطلاعات شما
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-mobile-alt fa-3x text-secondary"></i>
                    </div>
                    <h5 class="card-title">رابط کاربری مدرن</h5>
                    <p class="card-text text-muted">
                        طراحی ریسپانسیو و کاربرپسند که در تمامی دستگاه‌ها به خوبی کار می‌کند
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
@if (!Context.Request.Cookies.ContainsKey("jwt_token"))
{
    <div class="bg-primary text-white py-5">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h3 class="fw-bold mb-3">آماده شروع هستید؟</h3>
                    <p class="lead mb-4">
                        همین حالا ثبت‌نام کنید و مدیریت پورتفولیو خود را آغاز کنید
                    </p>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-rocket me-2"></i>شروع رایگان
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>ورود به سیستم
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 500px;
    display: flex;
    align-items: center;
}

.feature-icon {
    transition: transform 0.3s ease;
}

.card:hover .feature-icon {
    transform: translateY(-5px);
}

.card:hover {
    transform: translateY(-2px);
    transition: all 0.3s ease;
}
</style>
