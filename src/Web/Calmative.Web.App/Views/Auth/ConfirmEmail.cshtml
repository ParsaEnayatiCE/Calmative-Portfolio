@{
    ViewData["Title"] = "تأیید ایمیل";
    Layout = "_Layout";
    bool isSuccess = ViewData["Success"] as bool? ?? false;
    string message = ViewData["Message"] as string ?? (isSuccess ? "ایمیل شما با موفقیت تأیید شد. هم‌اکنون می‌توانید وارد شوید." : "لینک تأیید نامعتبر یا منقضی شده است.");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header text-center @(isSuccess ? "bg-success" : "bg-danger") text-white">
                    <h3>
                        <i class="fas @(isSuccess ? "fa-check-circle" : "fa-times-circle") me-2"></i>
                        @(isSuccess ? "تأیید شد" : "خطا")
                    </h3>
                </div>
                <div class="card-body text-center">
                    <p class="lead">@message</p>
                    <a asp-action="Login" class="btn btn-primary mt-3">
                        <i class="fas fa-sign-in-alt"></i> ورود
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 