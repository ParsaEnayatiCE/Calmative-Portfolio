@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white text-center">
                    <h3><i class="fas fa-envelope-open"></i> Check Your Email</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-paper-plane fa-5x text-info mb-4"></i>
                    <h4>Password Reset Link Sent!</h4>
                    <p class="lead">We've sent a password reset link to your email address.</p>
                    <p>Please check your email and click the link to reset your password.</p>
                    <hr />
                    <p class="text-muted">The link will expire in 1 hour for security reasons.</p>
                    <a asp-action="Login" class="btn btn-primary mt-3">
                        <i class="fas fa-sign-in-alt"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 