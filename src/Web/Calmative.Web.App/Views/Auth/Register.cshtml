@model Calmative.Web.App.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "ثبت‌نام";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2 class="text-gradient"><i class="fas fa-user-plus me-2"></i>ثبت‌نام</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="row">
                    <div class="col-6 mb-3">
                        <label asp-for="FirstName" class="form-label">نام</label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label asp-for="LastName" class="form-label">نام خانوادگی</label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">ایمیل</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">رمز عبور</label>
                    <input asp-for="Password" class="form-control" type="password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">تکرار رمز عبور</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> ثبت‌نام
                    </button>
                </div>
            </form>
            
            <div class="text-center mt-3">
                <small>حساب کاربری دارید؟ <a asp-action="Login">وارد شوید</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 